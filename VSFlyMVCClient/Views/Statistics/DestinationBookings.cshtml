@model VSFlyMVCClient.Models.Statistics.DestinationBookings

@{
    ViewData["Title"] = "DestinationBookings";
}

<h1>Destination bookings</h1>

<form asp-action="DestinationBookings">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Destination" class="control-label"></label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
        <span><input type="submit" value="Go!" class="btn btn-primary" /></span>
    </div>
</form>

@if (!String.IsNullOrEmpty(Model.Destination))
{
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
    </dl>
</div>
@if(Model.BookingSet.Count>0){
<table class="table">
    <thead>
        <tr>
            <th>
                Surname
            </th>
            <th>
                Given name
            </th>
            <th>
                Flight No
            </th>
            <th>
                Sale price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.BookingSet){
        <tr>
            <td>
                @item.Surname
            </td>
            <td>
                @item.GivenName
            </td>
            <td>
                @item.FlightNo
            </td>
            <td>
                @item.SalePrice
            </td>
        </tr>
    }
    </tbody>
</table>
}else
{
<div>No booking for this destination</div>
}
}
else
{
<div>Please enter a destination</div>
}

<br />
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>
