@model VSFlyMVCClient.Models.Statistics.FlightTotalSalePrice

@{
    ViewData["Title"] = "Flight total sale price";
}

<h1>Flight total sale price</h1>

<form asp-action="FlightTotalSalePrice" class="form-inline">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FlightNo" class="control-label"></label>
        <input style="margin-left: 0.5em;" asp-for="FlightNo" class="form-control" />
        <span asp-validation-for="FlightNo" class="text-danger"></span>
        <input style="margin-left: 0.5em;" type="submit" value="Go!" class="btn btn-primary" />
    </div>
</form>

@if (Model.FlightNo > 0)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FlightNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FlightNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalSalePrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalSalePrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PassengersCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PassengersCount)
            </dd>
        </dl>
    </div>
}
else if (Model.FlightNo == 0)
{
    <br />
    <div>Please enter a flight number</div>
}
else
{
    <br />
    <div>No flight found 😕</div>
}

<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>
