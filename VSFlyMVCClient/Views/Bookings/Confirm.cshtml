@model VSFlyMVCClient.Models.Flight

@{
    ViewData["Title"] = "View";
}

<div>
    <h4>Flight detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Flight #
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNo)
        </dd>
        <dt class="col-sm-2">
            Departure airport
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            Destination airport
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            Date and time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Base price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BasePrice)
        </dd>
        </dd>
        <dt class="col-sm-2">
            Sale price
        </dt>
        <dd class="col-sm-10">
            @ViewBag.salePrice
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Register", "Passengers", @Model.FlightNo)" />Continue booking</a><br /><br />

    <a href='javascript:history.go(-1)'>Return to flights list</a>

</div>
